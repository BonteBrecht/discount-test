{
    "name": "brecht/discount-test",
    "description": "Small demo project for calculating discounts on orders",
    "authors": [
        {
            "name": "Brecht Bonte",
            "email": "bonte.brecht@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-intl": "*",
        "davedevelopment/phpmig": "^1.7",
        "pimple/pimple": "^3.4",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.91",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    }
}
